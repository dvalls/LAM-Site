!!! 5
%html
  %head
    %title= "studioLAM"

    // SEO
    //%meta{name:"description", :content => t :meta.description}
    // %meta{name:"keywords", :content => t :meta.description}

    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    %link{href: "http://fonts.googleapis.com/css?family=Roboto:300", rel: "stylesheet", type: "text/css"}
    %link{href: "//netdna.bootstrapcdn.com/font-awesome/4.0.0/css/font-awesome.min.css", rel: "stylesheet"}
    //%link{href: "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css", rel: "stylesheet"}
    //%script{:src=>"//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"}
    = csrf_meta_tags

  %body
    .container
      %header.row
        =link_to(image_tag('logo.jpg'), root_path)

      .row
        %nav.col-lg-3
          %ul
            %li=link_to(t('nav.projects'), '#')
            %li=link_to(t('nav.about'), '#')
            %li=link_to(t('nav.contact'), '#')


          = link_to 'PT-BR', :locale=>'pt-BR'
          |
          = link_to 'ENG', :locale=>'en'

          #footnote
            %ul.social
              %li
                =link_to 'ddddd' do
                  %i.fa.fa-facebook.fa-2x
              %li
                =link_to 'ddddd' do
                  %i.fa.fa-instagram.fa-2x
              %li
                =link_to 'ddddd' do
                  %i.fa.fa-pinterest.fa-2x
              %li
                =link_to 'ddddd' do
                  %i.fa.fa-twitter.fa-2x
              %li
                =link_to 'ddddd' do
                  %i.fa.fa-vimeo-square.fa-2x
              %li
                =link_to 'ddddd' do
                  %i.fa.fa-google-plus.fa-2x

            %p=t 'phone'
            %p=t 'email'
            %address=t('address')
            =t 'copyright'

        %main.col-lg-9
          = yield

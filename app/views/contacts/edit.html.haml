= simple_form_for(@contact,:url => {:action => :update},  html: {class: 'form-horizontal', method: "patch"}) do |f|
  = f.error_notification

  = f.input :body, as: :text,  input_html: {'data-provide' => 'markdown',  :rows => '10'}

  .form-actions
  = f.submit 'Save'

= javascript_include_tag "bootstrap-markdown", "markdown"
= stylesheet_link_tag "bootstrap-markdown.min"
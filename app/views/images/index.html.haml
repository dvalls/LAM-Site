- @images.each do |image|
  .thumbnail
    = image_tag image.url.url(:thumb)
    %h3= image.title
    = image.description
    %p
      = link_to 'Apagar Imagem', project_image_path(@imageable, image), :method => :delete, :data => { :confirm => 'Are you sure?' }
      = link_to 'Adicionar Info', edit_project_image_path(@imageable, image)

%p= link_to 'ADICIONAR IMAGENS', new_project_image_path
%p= link_to 'voltar', edit_project_path(@imageable)
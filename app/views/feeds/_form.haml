= form_for @feed do |f|
  - if @feed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@feed.errors.count, "error")} prohibited this feed from being saved:"
      %ul
        - @feed.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :body
    = f.text_area :body, {"data-provide" => "markdown", name: "content", rows: "10"}
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'

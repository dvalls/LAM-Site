= simple_form_for(@project) do |f|
  = f.error_notification

  .form-inputs
    = f.input :slug
    = f.input :title
    = f.input :description, input_html: {:rows => '20'}
    = f.association :categories, as: :check_boxes
    = f.input :year, as: :date,  discard_day: true

  .form-actions
    = f.button :submit, 'CRIAR PROJETO', :class => 'btn btn-primary'

= simple_form_for(@image,:html => {:multipart => true}) do |f|
  = f.error_notification

  %p= image_tag @image.url.url(:thumb)
  .form-inputs
    = f.input :title
    = f.input :description
    = f.input :url, as: :file

  .form-actions
    = f.button :submit, 'ATUALIZAR INFORMAÇÕES', :class => 'btn btn-primary'
